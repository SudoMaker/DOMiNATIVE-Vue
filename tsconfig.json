{
    "compilerOptions": {
      "module": "esnext",
      "target": "es2017",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": ["es2017", "dom"],
      "baseUrl": ".",
    },
    "exclude": ["node_modules"]
  }